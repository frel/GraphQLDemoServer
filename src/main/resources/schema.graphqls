# This is the main schema.

schema {
    query: Query
}

type Query {
    item(id: ID!): Item
    items: [Item]!
    version: String
}

input ImageSize {
    height: Int
    width: Int
}

interface Item {
    uuid: ID!
    title: String!
    ctype: Int!
    tags: [String!]!
    description: String
    subtitle: String
    creationTime: String
    ownerUuid: ID!
}

type Wallpaper implements Item {
    uuid: ID!
    title: String!
    ctype: Int!
    tags: [String!]!
    description: String
    subtitle: String
    creationTime: String
    ownerUuid: ID!
    imageUrl: String
    microThumb: String
    width: Int!
    height: Int!
}

type Audio implements Item {
    uuid: ID!
    title: String!
    ctype: Int!
    tags: [String!]!
    description: String
    subtitle: String
    creationTime: String
    ownerUuid: ID!
    streamUri: String
    duration: Float
    audioFlowerUrl: String
}
